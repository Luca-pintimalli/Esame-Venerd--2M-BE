@model IEnumerable<TotalePunti>

<h2>Totale Punti Decurtati per Trasgressore</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id Anagrafica</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Totale Punti Decurtati</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdAnagrafica</td>
                <td>@item.Nome</td>
                <td>@item.Cognome</td>
                <td>@item.TotalePuntiDecurtati</td>
            </tr>
        }
    </tbody>
</table>
