@model IEnumerable<Anagrafica>

@{ViewData["Title"] = "Trasgressori";
    Layout = "_Layout";
}


<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
@if (Model.Any())
{
    <table class="table table-borderless">
        <thead>
            <tr>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Codice Fiscale</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>CAP</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Cognome</td>
                    <td>@a.Nome</td>
                    <td>@a.Cod_Fisc</td>
                    <td>@a.Indirizzo</td>
                    <td>@a.Citta</td>
                    <td>@a.CAP</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="row">
        <div class="col alert alert-warning">Nessun Trasgressore</div>

    </div>

}



<div class="row">

    <div class="col">
        <a  asp-action="NewAnagrafica" class="btn btn-primary">Nuovo Trasgressore</a>

    </div>

</div>